<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RendimentoDeSoja" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primaryVariant</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >@color/white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="M">true</item>
        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/product_sans_regular</item>
    </style>

    <style name="Theme.RendimentoDeSoja.Transparent" parent="Theme.RendimentoDeSoja">

    </style>

    <style name="CustomStyleTabLayout" parent="Theme.RendimentoDeSoja">
        <item name="android:textSize">14sp</item>
        <item name="textAllCaps">false</item>
    </style>

</resources>